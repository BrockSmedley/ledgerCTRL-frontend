{% extends 'base.jinja' %}
{% block title %}{{ title }}{% endblock %}
{% block header %}
{% endblock %}

{% block content %}

<div class="mdl-grid demo-content mdl-color--white">
    <div class="mdl-cell mdl-cell--8-col mdl-color--white-400 demo-charts">
        <div class="mdl-layout-spacer"></div>
        <h5>Item Preview...</h5>
        <h6>{{ filehash }}</h6>
        <a href="/file/{{ itemhash }}">Download {{ filename }}</a>
    </div>
    <div class="mdl-cell mdl-cell--4-col">
        <h2>{{ name }}</h2>
        <h5>Item information...</h5>
        <ul class="demo-list-icon mdl-list">
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                <i class="material-icons mdl-list__item-icon">person</i>
                Bryan Cranston
            </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                <i class="material-icons mdl-list__item-icon">person</i>
                Aaron Paul
            </span>
            </li>
            <li class="mdl-list__item">
                <span class="mdl-list__item-primary-content">
                <i class="material-icons mdl-list__item-icon">person</i>
                Bob Odenkirk
            </span>
            </li>
        </ul>
    </div>
</div>
<div class="actionbutton-row">
    <div class="actionbutton-container">
        <a href="/file/{{ itemhash }}">
            <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored mdl-color--blue">
                <i class="material-icons">cloud_download</i>
            </button>
        </a>
        <span>Download</span>
    </div>
    <div class="actionbutton-container">
        <a href="#">
            <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored mdl-color--orange" disabled>
                <i class="material-icons">account_circle</i>
            </button>
        </a>
        <span>Transact</span>
    </div>
    <div class="actionbutton-container">
        <a href="#">
            <button class="mdl-button mdl-js-button mdl-button--fab mdl-button--mini-fab mdl-button--colored mdl-color--green" disabled>
                <i class="material-icons">label</i>
            </button>
        </a>
        <span>Smart Tag</span>
    </div>
</div>

{% endblock %}